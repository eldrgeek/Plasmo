# MCP Server Security Configuration
MCP_API_KEY=  # Will be auto-generated if not set
MCP_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://*.trycloudflare.com
MCP_RATE_LIMIT=100  # Requests per minute
MCP_SECURE_MODE=true

# Cloudflare Tunnel Configuration
TUNNEL_NAME=plasmo-mcp-server
TUNNEL_METRICS_PORT=9091
MCP_PORT=8000
SOCKETIO_PORT=3001

# Logging Configuration
LOG_LEVEL=INFO
SECURE_LOG_FILE=secure_mcp.log

# Optional: Custom domain configuration
# CUSTOM_DOMAIN=your-subdomain.your-domain.com 